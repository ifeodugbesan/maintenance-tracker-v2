<section class="mw-800 mb-3">
  <div class="f-wrapper">
    <h1 class="text-center d-title mb-5">AMEND SERVICE</h1>
    <div class="d-container">
      <%= simple_form_for @service do |f| %>
        <%= f.input :name %>
        <%= f.input :frequency, label: 'SERVICE FREQUENCY (MONTHS)', placeholder: "MONTHS UNTIL THE NEXT SERVICE?" %>
        <%= f.submit 'AMEND SERVICE', class: 'primary-btn' %>
      <% end %>
    </div>
  </div>
</section>

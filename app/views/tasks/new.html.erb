<section class="mw-700 mb-3">
  <div class="f-wrapper">
    <h1 class="text-center d-title mb-5">ASSIGN TASK</h1>
    <div class="d-container">
      <%= simple_form_for @task do |f| %>
        <div class="row mt-4">
          <div class="col-6">
            <%= f.input :start_date, as: :date, required: true, html5: true %>
          </div>
          <div class="col-6">
            <%= f.input :end_date, as: :date, required: true, html5: true %>
          </div>
        </div>
        <%= f.input :title %>
        <%= f.input :extra_info %>
        <%= f.association :technician, as: :radio_buttons, :collection => User.where(:manager => false), :label_method  => lambda { |technician| "#{technician.first_name.capitalize} #{technician.last_name.capitalize}" } %>
        <div>
          <%= f.association :service %>
        </div>
        <div data-service-equipment-target='serviceInput'>
          <%= f.association :equipment %>
        </div>
        <%= f.association :waterpoint, :label_method => lambda { |waterpoint| "#{waterpoint.waterpoint_type} at #{waterpoint.network.name}" } %>
        <%= f.button :submit, 'CREATE A TASK', class: "primary-btn" %>
      <% end %>
    </div>
  </div>
</section>

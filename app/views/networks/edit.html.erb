<section class="mw-800 mb-3">
  <div class="f-wrapper">
    <h1 class="d-title mb-5 w-100">AMEND NETWORK</h1>
    <div class="d-container">
      <%= simple_form_for @network do |f| %>
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :number_of_households %>
        <%= f.input :max_households %>
        <%= f.submit 'AMEND NETWORK', class: 'primary-btn' %>
      <% end %>
    </div>
  </div>
</section>
